        <!-- archive -->
         <script>
          function switch_arch(year){
            var targetElement;
            targetElement = document.getElementById("arch_"+year) ;
            if (targetElement.style.display == "none")
            {
              targetElement.style.display = "" ;
            } else {
              targetElement.style.display = "none" ;
            }
            return false;
          }
